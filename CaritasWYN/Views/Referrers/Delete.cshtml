@model CaritasWYN.Models.Referrer

@{
    ViewData["Title"] = "Delete";
}


<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col-md-8">
                <h1>Delete</h1>
                <h3 class="text-danger">Are you sure you want to delete this?</h3>
                <hr />
            </div>

            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Type)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Office)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Office)
                    </dd>
                </dl>
                <hr />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ReferrerId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
