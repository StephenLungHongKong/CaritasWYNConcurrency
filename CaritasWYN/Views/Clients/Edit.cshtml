@model CaritasWYN.Models.Client

@{
    ViewData["Title"] = "Edit";
}

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Editing a client record</h1>
                <form asp-action="Edit">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ClientId"/>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Age" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Age" class="form-control" />
                            <span asp-validation-for="Age" class="text-danger"></span>
                     </div>
                            
                        </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Referrer</label>
                        <div class="col-sm-4">
                            <select asp-for="ReferrerId" class="form-control" asp-items="ViewBag.ReferrerId"></select>
                            <span asp-validation-for="ReferrerId" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6"></div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6"></div>
                    </div>
                        <div class="form-group row">
                            <label asp-for="Room" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-2">
                                <input asp-for="Room" class="form-control" />
                                <span asp-validation-for="Room" class="text-danger"></span>
                            </div>
                            <div class="col-sm-8"></div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Floor" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-2">
                                <input asp-for="Floor" class="form-control" />
                                <span asp-validation-for="Floor" class="text-danger"></span>
                            </div>
                            <div class="col-sm-8"></div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Street" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Street" class="form-control" />
                                <span asp-validation-for="Street" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Building" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Building" class="form-control" />
                                <span asp-validation-for="Building" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="District" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="District" class="form-control" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                        </div>
</form>
                
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
