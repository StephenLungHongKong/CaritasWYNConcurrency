@model CaritasWYN.Models.JobDuty

@{
    ViewData["Title"] = "Create";
}

<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col-md-12">
                <h1>Adding a new job type</h1>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="JobType" class="form-control" placeholder="JobType" />
                        <span asp-validation-for="JobType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
