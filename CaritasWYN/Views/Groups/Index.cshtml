@model IEnumerable<CaritasWYN.Models.Group>

@{
    ViewData["Title"] = "Index";
}


<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <div class="row>">
            <h1>Groups</h1>
            <table class="table table-borderless table-hover" style="width: 50vw;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Staff)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Client)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client.FullName)
                        </td>
                        <td class="text-right">
                            <a asp-action="Edit" asp-route-id="@item.GroupId" class="btn btn-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.GroupId" class="btn btn-outline-dark">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.GroupId" class="btn btn-danger">&#10005</a>
                        </td>
                    </tr>
                    }
                    <tr>

                        <td class="text-right" colspan="5">
                            <a asp-action="Create" class="btn btn btn-primary">Add &#10010</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>