@model CaritasWYN.Models.Group

@{
    ViewData["Title"] = "Create";
}


<div class="jumbotron">
    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col-md-12">
                <h1>Adding a new group</h1>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Staff)</label>
                        <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId"></select>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Client)</label>
                        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
